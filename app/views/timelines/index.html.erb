<h1>Timelines#index</h1>

<% if current_user %>
	<a href="<%= new_timeline_path %>">
		<%= button_tag "create new timeline page" %>
	</a>
<% end %>

<ul>
	<% @timeline.each do |tl| %>
	<li>
		<%= link_to "TIMELINE "+ tl.subject, tl %>
		<%= tl.description %>, <%= tl.created_at.to_s %>
		<% if current_user.admin? %>
			<%= link_to "delete", tl, :method => :delete, :confirm => "You sure?",
			                                :title => "Delete this timeline" %>
		<% end %>
	</li>
	<% end %>
</ul>